packages:
  yum:
    openssl: []

commands:
  01_create_ssl_directory:
    command: "mkdir -p /etc/pki/tls/certs"

  02_generate_self_signed_cert:
    command: |
      openssl req -x509 -nodes -days 365 \
        -newkey rsa:2048 \
        -keyout /etc/pki/tls/certs/selfsigned.key \
        -out /etc/pki/tls/certs/selfsigned.crt \
        -subj "/C=US/ST=State/L=City/O=MyOrg/OU=IT/CN=localhost"

files:
  "/etc/nginx/conf.d/ssl.conf":
    mode: "000644"
    owner: root
    group: root
    content: |
      server {
        listen 443 ssl;
        server_name _;

        ssl_certificate /etc/pki/tls/certs/selfsigned.crt;
        ssl_certificate_key /etc/pki/tls/certs/selfsigned.key;

        location / {
          proxy_pass http://127.0.0.1:8081;
          proxy_set_header Host $host;
          proxy_set_header X-Real-IP $remote_addr;
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header X-Forwarded-Proto https;
        }
      }

container_commands:
  01_reload_nginx:
    command: "sudo service nginx reload"
    